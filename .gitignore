        self.siteurl='http://mm.taobao.com/json/request_top_list.htm'
        
    def getPage(self,page):
        url=self.siteurl+'?page='+str(page)
        request=urllib2.Request(url)
        response=urllib2.urlopen(request)
        return response.read().decode('gbk')
